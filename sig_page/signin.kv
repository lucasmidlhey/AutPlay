<SigninWindow>:
    name:'main_win'
    id: main_win
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos    
    
    BoxLayout: 
        size_hint_y: None
        height: 50
        canvas.before:
            Color:
                rgba: (.06,.45,.45,1)
            Rectangle:
                size: self.size
                pos: self.pos  
        Label:
            text: "AutPlay"
            bold: True
            font_size:30
            
  
    Label:
        id: sp
        size_hint_y: None
        height:20               
    BoxLayout:
        orientation: "vertical"
        padding: main_win.space_x,10
        #spacing: 20  
        BoxLayout:
            name:'Login'
            orientation: "vertical"
            spacing: 10
            size_hint_y: None
            height: 150
            Label:
                id: info
                text:''
                markup: True
                size_hint_y: None
                height: 50 
            TextInput:
                id: username_field
                hint_text: "Apelido"
                multiline: False
                focus: True
                on_text_validate: pwd_fiel.focus = True
            TextInput:
                id: pwd_field
                hint_text: "Senha"
                multiline: False
                password: True
                on_text_validate: root.validate_user() 
        Label:
            id: sp
            size_hint_y: None
            height:40            
        Button:
            id:btn
            text: "Sing in"
            size_hint_y: None
            height:40 
            background_color:(.06,.45,.45,1)
            background_normal: ''
            on_release: 
                root.validate_user()
                app.root.current = 'Menu'


        Label:
            id: sp2
            size_hiny_y: None
            height:40          

