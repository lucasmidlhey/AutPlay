<MyLabelWithBackground@Label>:
    canvas.before:
        Color:
            rgba: .06,.45,.45,.5
        Rectangle:
            pos: self.pos
            size: self.size
            
<Botao@Button+Label>:
    id:Background_Tema
    background_disabled_normal:'Turma_da_Monica.jpg'
    disabled:True
<Voltar@Button+Label>:
    size_hint_x:.1
    size_hint_y:None
    height:30
    text:'Voltar'
    on_release:app.root.current='Menu'
    background_color:(.06,.45,.45,1)
    background_normal: ''


